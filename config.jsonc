{
  // OpenAI-compatible API settings
  "base_url": "https://api.siliconflow.cn",
  "api_key": "",
  "model": "tencent/Hunyuan-MT-7B",

  // Retry attempts (API failures + glossary rule failures)
  "retry_times": 3,

  // Prompt file (optional)
  "prompt_path": "prompts/translate.md",

  // Glossary (inline or via file)
  "glossary_path": "glossary.jsonc",

  // Optional tuning
  "temperature": 0.2,
  "max_tokens": 8192,
  "timeout_ms": 120000,
  "max_batch_chars": 4000,
  "max_batch_segments": 100
}
